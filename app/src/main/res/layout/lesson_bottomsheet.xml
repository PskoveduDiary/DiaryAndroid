<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/standard_bottom_sheet"
    style="@style/Widget.Material3.BottomSheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <com.google.android.material.bottomsheet.BottomSheetDragHandleView
            android:id="@+id/drag_handle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card"
                android:layout_marginVertical="3dp"
                android:layout_width="match_parent"
                app:cardElevation="1dp"
                app:strokeColor="@android:color/transparent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="5dp">

                    <TextView
                        android:id="@+id/less_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1. Урок"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/less_teacher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Иванов Иван Иванович"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/less_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="12.12.2022" />

                        <TextView
                            android:id="@+id/absence_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:textColor="@color/two"
                            android:text="Пропуск" />

                        <TextView
                            android:id="@+id/less_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="18:00 - 19:00" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card2"
                android:layout_marginVertical="3dp"
                android:layout_width="match_parent"
                app:cardElevation="1dp"
                app:strokeColor="@android:color/transparent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/less_topic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Тема: Повторно-обобщающий урок по теме Основные классы неорганических соединений" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card3"
                android:layout_marginVertical="3dp"
                android:layout_width="match_parent"
                app:cardElevation="1dp"
                app:strokeColor="@android:color/transparent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/less_homework_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Д/з на этот урок:" />

                    <TextView
                        android:id="@+id/less_homework"
                        android:textIsSelectable="true"
                        android:layout_width="match_parent"
                        android:autoLink="all"
                        android:linksClickable="true"
                        android:layout_height="wrap_content"
                        android:text="Выполнить задания из прикрепленного файла. Повторить все классы неорганических соединений и их формулы (оксиды, основания, кислоты, соли)" />

                    <TextView
                        android:id="@+id/less_homework_label2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Д/з на следующий урок:" />

                    <TextView
                        android:id="@+id/less_homework2"
                        android:textIsSelectable="true"
                        android:layout_width="match_parent"
                        android:autoLink="all"
                        android:linksClickable="true"
                        android:layout_height="wrap_content"
                        android:text="§20-21, прочесть §22, письменное задание" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card4"
                android:layout_marginVertical="3dp"
                app:cardElevation="1dp"
                android:layout_width="match_parent"
                app:strokeColor="@android:color/transparent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/less_mark_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Оценки:" />

                    <TextView
                        android:id="@+id/less_mark"
                        android:layout_width="match_parent"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"
                        android:text="5, 5, 5" />

                    <TextView
                        android:id="@+id/less_comment_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Заметки учителя:" />

                    <TextView
                        android:id="@+id/less_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_marginVertical="3dp"
                android:visibility="gone"
                android:id="@+id/card5"
                app:strokeColor="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <TextView
                        android:id="@+id/includes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Прикрепленные файлы:" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/files_recycler"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:itemCount="1"
                        tools:listitem="@layout/file_item"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
